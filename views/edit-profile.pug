                    else
                        input(type="radio" id="q3a2" name="question3" value="cat")
                        label(for="q3a2")="Cat"
                div(class="radio")
                    if user.answer3 === "sloth"
                        input(type="radio" id="q3a3" name="question3" value="sloth" checked=true)
                        label(for="q3a3")="Sloth"
                    else
                        input(type="radio" id="q3a3" name="question3" value="sloth")
                        label(for="q3a3")="Sloth"
                div(class="radio")
                    if user.answer3 === "eagle"
                        input(type="radio" id="q3a4" name="question3" value="eagle" checked=true)
                        label(for="q3a4")="Eagle"
